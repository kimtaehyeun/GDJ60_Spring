<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.iu.s1.board.qna.QnaDAO">
  <sql id="qnaCondition">
  	<where>
		<if test="kind=='title'">
			TITLE LIKE '%'||#{search}||'%'
		</if>
		<if test="kind=='writer'">
			WRITER LIKE '%'||#{search}||'%'
		</if>
	
		<if test="kind=='contents'">
			CONTENTS LIKE '%'||#{search}||'%'
		</if>
	
	</where>
  </sql>
  
  <select id="getTotalCount" parameterType="Pager" resultType="Long">
  SELECT COUNT(NUM) FROM QNA
  <include refid="qnaCondition"></include>
  </select>
  <select id="getQnaList" parameterType="Pager" resultType="QnaDTO">
  SELECT * FROM ( 
			SELECT ROWNUM R, C.* FROM		(
				 SELECT NUM,TITLE,CONTENTS,WRITER,REGDATE,HIT,REF,STEP,DEPTH FROM QNA
				<include refid="qnaCondition"></include>
				ORDER BY NUM DESC
			) C
		)
		WHERE R BETWEEN #{startRow} AND #{lastRow}
  </select>
  
  </mapper>